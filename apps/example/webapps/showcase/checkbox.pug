include ../../../../src/client/templates/mixins.pug

panel(type="info" title="checkbox")
    .content

        .row
            .col-md-6
                h3 Instant checkbox (without on-change event)
                checkbox(checked="{{checkbox.checked1}}") My Checkbox
            .col-md-6
                p My checkbox state is: {{ checkbox.checked1 ? 'checked!' : 'not checked...' }}


        .row
            .col-md-4
                h3 Event triggering checkbox (using on-change event)
                checkbox2(checked="{{checkbox.checked1}}" on-statechange="checkboxchanged" value="hi!") My Checkbox2 (with event)
            .col-md-4
                h3 No event
                checkbox2(checked="{{checkbox.checked1}}") My Checkbox2 (no event)

            .col-md-4
                p My checkbox state is: {{ checkbox.checked1 ? 'checked!' : 'not checked...' }}
