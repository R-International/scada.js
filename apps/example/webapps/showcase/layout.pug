.ui.top.menu.inverted
    a.item(onclick="$('.ui.sidebar').sidebar('toggle')")
        i.sidebar.icon
        | Menu
    .horizontal.right.menu
        .item
            i.icon.user
            span John DOE
            
.ui.divider.hidden
