.ui.pushable
    .ui.vertical.inverted.sidebar.menu.left.inline
        +each('menu')
            +unless('.submenu')
                a.item(
                    href="{{.url}}"
                    class="{{#if currentPage === .url }}active{{/if}}"
                    )
                    | {{ .title }}
                    +if('.icon')
                        i.icon(class="{{.icon}}")
            +if('.submenu')
                .item
                    .header {{.title}}
                    .menu
                        +each('.submenu')
                            a.item(
                                href="{{.url}}"
                                class="{{#if currentPage === .url }}active{{/if}}"
                                )
                                | {{ .title }}
                                +if('.icon')
                                    i.icon(class="{{.icon}}")


