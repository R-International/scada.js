anchor login
.ui.segments
    h3.ui.top.attached.block.header login #[a(href="#login") #[i.linkify.icon]]
    .ui.attached.segment
        .ui.relaxed.divided.list 
            .item 
                i.large.user.middle.aligned.icon 
                .content 
                    a.header Account 1
                    .description user1, #[code hello world]
            .item 
                i.large.user.middle.aligned.icon 
                .content 
                    a.header Account 2
                    .description user2, #[code hello world2]
            
    h3.ui.attached.block.header Login Form
    .ui.attached.segment
        .ui.two.column.stackable.center.aligned.grid 
            .column 
                form.ui.form 
                    .field
                        label username 
                        .ui.left.icon.input 
                            input(value="{{login.username}}" placeholder="username")
                            i.user.icon 
                    .field 
                        label password
                        .ui.left.icon.input
                            input(value="{{login.password}}" placeholder="password")
                            i.lock.icon 
                    login-button.green.fluid(
                        username="{{login.username}}" 
                        password="{{login.password}}"
                        loggedin="{{login.loggedin}}") Login
            .ui.horizontal.divider or 
            .column 
                form.ui.form 
                    .field
                        label token 
                        .ui.left.icon.input 
                            input(value="{{login.token}}" placeholder="token")
                            i.lock.icon 
                    login-button.purple.fluid(
                        token="{{login.token}}" 
                        loggedin="{{login.loggedin}}") Login with token
        
    h3.ui.attached.block.header Authorization Tests 
    .ui.attached.segment
        p.
            This section should only be readable by user1 and only writable 
            by user2. Guest should not see anything at all.
        
        p topic: "authorization.test1"
        
        h4.ui.horizontal.divider.header #[i.lock.icon] authorization test starts here 
        .ui.input: input(value="{{rtComponents.testAuthorization1.value}}")
        slider(value="{{rtComponents.testAuthorization1.value}}")
        sync(value="{{rtComponents.testAuthorization1.value}}" 
            topic="authorization.test1"
            perms="{{authorization.test1.perms}}")
        p effective permissions: {{authorization.test1.perms}}
        h4.ui.horizontal.header.divider authorization test ends here 
            
