ack-button.aea-checkbox(
    on-click="_statechange"
    class!="                        \
        {{^transparent}}basic{{/}}  \
        gray {{ class }}            \
        {{#if checkState === 'doing'}}  \
        labeled                         \
        {{/if}}                         \
        icon                        \
        "
    style="{{ style }} {{#transparent}}background-color: transparent;{{/}} text-align: left; "
    type="{{type}}"
    custom
    disabled="{{disabled}}"
    )
    +iff("checkState === 'checked'")
        i.icon.checkmark.box
    +elif("checkState === 'unchecked'")
        i.icon.square.outline
    +elif("checkState === 'undefined'")
        i.icon.minus.square.outline
    +elif("checkState === 'doing'")
        i.icon 
            .ui.active.mini.inverted.loader
    +endif
    | {{yield}}
        
