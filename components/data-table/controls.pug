//- table form controls 
+partial('controls')
    .ui.buttons(class="{{cls}}" style="{{style}}")
        +unless('readonly')
            btn(
                on-click="toggleEditing"
                class!="{{#if editable}}red{{else}}blue{{/if}}"
                active="{{editable}}"
                tooltip="DÃ¼zenle"
                )
                i.write.icon 
            .or
        +iff('editable')
            btn.blue(on-click="toggleEditing" tooltip="Close Editable")
                i.remove.icon
        +else
            btn(on-click="closeRow" tooltip="Close Row")
                i.remove.icon
        +endif
