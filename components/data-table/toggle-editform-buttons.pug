//- table form controls 
+partial('controls')
    .ui.buttons 
        +unless('readonly')
            btn(
                on-buttonclick="toggleEditing"
                class!="{{#if editable}}red{{else}}blue{{/if}}"
                active="{{editable}}"
                tooltip="DÃ¼zenle"
                )
                i.write.icon 
            .or
        +iff('editable')
            btn.blue(on-buttonclick="toggleEditing" tooltip="Close Editable")
                i.remove.icon
        +else
            btn(on-buttonclick="closeRow" tooltip="Close Row")
                i.remove.icon
        +endif
    .ui.horizontal.divider 
