.fileUpload.ui.button(class="{{class}}")
    | {{yield}}
    +if('show')
        +iff('camera')
            input.upload(type="file" title="{{tooltip}}"
                on-change="fileSelect" capture="camera" accept="image/*")
        +else
            input.upload(type="file" title="{{tooltip}}"
                on-change="fileSelect")
        +endif
