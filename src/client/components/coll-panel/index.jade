style. 
    .panel-heading span
    {
        margin-top: -20px;
        font-size: 15px;
    }

    .clickable
    {
        cursor: pointer;
    }




+component('coll-panel')
    panel-custom(type="{{ type }}")
        .panel-heading
            | {{yield heading}} 
        
        btn.clickable(type="{{ type }} sm block" style="margin-top: 0; padding-top: 0")
            caret 
        +unless('collapsed')
            .panel-body
                | {{yield body}}
