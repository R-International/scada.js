include ../../templates/mixins.pug
style.
    .clickable
    {
        cursor: pointer;
    }




.panel(class="{{#if type}}panel-{{type}}{{/if}}" style="{{ style }}")
    .panel-heading
        | {{yield heading}}

    +if('showBody === true')
        btn.clickable(type="{{ type }} sm block" style="margin-top: 0; padding-top: 0")
            caret
    +unless('collapsed')
        .panel-body
            | {{yield body}}
