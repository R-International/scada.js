include ../../templates/mixins.pug

div(style="display:inline-block")
    |{{#if editable}}
    dropdown-panel
        +partial('body')
            | {{> editForm}}
        +partial('dropdown')
            textarea(value="{{ message }}" placeholder="Açıklama..." style="border: none; width: 100%; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box;")
            btn-group-vertical
                ack-button(class="formal-field-accept-button" type="success xs" on-buttonclick="accept") Accept
                ack-button(class="btn pull-right" type="danger xs" on-buttonclick="cancel") Cancel

    |{{else}}
    span(class="formal-field" on-dblclick="edit")
        | {{> viewForm}}
        | &nbsp;
        |{{#if changelog.length > 0}}
        ack-button(on-buttonclick="showPopup" type="primary xs" style="position: relative;bottom: 10px;padding: 3px 6px;" value="{{changelog}}") {{changelog.length-1}}
        | &nbsp;
        |{{/if}}
    |{{/if}}
