.input-group
    input.form-control(value="{{ amount }}" style="min-width: 50px" type="{{ inputType }}" placeholder="{{placeholder}}")
    span.input-group-btn
        ack-button(
            type="{{buttonType}}"
            on-buttonclick="_buttonclick"
            value="{{ value }}"
            disabled="{{ disabled }}"
            enabled="{{ enabled }}"
            )
            | {{yield}}
