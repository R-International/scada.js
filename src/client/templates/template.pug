include mixins.pug
doctype html
html(lang="en-GB")
    head
        meta(charset="utf-8")
        meta(
            name="viewport"
            content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"
            )
        meta(http-equiv='cache-control' content='no-cache')
        meta(http-equiv='expires' content='0')
        meta(http-equiv='pragma' content='no-cache')
        meta(name="mobile-web-app-capable" content="yes")
        link(rel="icon" href="favicon.ico")
        link(rel="icon" sizes="192x192" href="favicon.ico")
        block title
            title ScadaJS #{app}
        block head
        script if (typeof module === 'object') {window.module = module; module = undefined;}
        script(src="js/vendor.js")
        script if (window.module) module = window.module;
        link(rel="stylesheet", href="css/vendor.css")
    body(ontouchstart)
        block content
            #main-output 
                .ui.centered.grid
                    .row
                        .column(style="padding-top: 10%")
                            h2.ui.center.aligned.header 
                                img.ui.tiny.image(src="scadajs.png")
                                .content ScadaJS

                .ui.active.big.text.loader#main-output
                    p Loading Application...

        block script
            script(src='app.js')
